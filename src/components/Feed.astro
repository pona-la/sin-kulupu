---
import FormattedDate from "@/components/FormattedDate.astro";
import { feed } from "@/utils/content";
---

<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    list-style-type: none;
    padding: 0;
    line-height: 1.3;
  }
  ul li {
    width: 100%;
  }
  .date {
    margin: 0;
    color: var(--grey);
  }
</style>
<ul>
  {
    feed.map((post) => (
      <li>
        <p class="date">
          <FormattedDate date={post.data.date} />
        </p>
        <a href={`/${post.id}/`}>{post.data.title}</a>
      </li>
    ))
  }
</ul>
